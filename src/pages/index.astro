    <Hero
      sub_header={sub_header}
      header1={header1}
      header2={header2}
      header3={header3}
      hero_image={hero_image_url}
      client:load
    />
  </section>

  <section id="about-us" class="h-full mt-24 md:mt-32 lg:px-16 md:px-10 px-6">
    <div class="overflow-hidden">
      <ValueProposition valueProposition={valuePropositionData} client:idle />
    </div>
  </section>

  <section id="services" class="h-full lg:px-16 md:px-10 px-6">
    <Services services={servicesData} client:idle />
  </section>

  <section
    id="products"
    class="h-full bg-black text-white md:rounded-t-4xl md:mt-0 mt-24 rounded-t-4xl"
  >
    <Products tabItems={tabItemsData} products={productsData} client:idle />
  </section>
  <section id="contact-us">
    <EmailForm client:idle />
  </section>
</MainLayout>
